<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/chw_textbox"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textSize="14sp"
            android:textColor="#444444"/>

        <EditText
            android:id="@+id/editAge"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/chw_textbox"
            android:inputType="number"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="14sp"
            android:textColor="#444444"/>

        <Spinner
            android:id="@+id/spinnerGender"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Occupation"
            android:textSize="14sp"
            android:textColor="#444444"/>

        <EditText
            android:id="@+id/editOccupation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/chw_textbox"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />



        <LinearLayout
            android:id="@+id/layoutPrescriptionUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Prescription"
                android:textSize="14sp"
                android:textColor="#444444" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/editPrescriptionFile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/chw_textbox"
                    android:padding="12dp"
                    android:hint="Upload file"
                    android:focusable="false"
                    android:clickable="true" />

                <ImageView
                    android:id="@+id/iconPrescriptionUpload"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/upload_image"
                    android:layout_marginEnd="8dp" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of Antibiotic"
            android:textSize="14sp"
            android:textColor="#444444"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp">

            <Spinner
                android:id="@+id/spinnerAntibiotic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/spinner_background"
                android:padding="12dp" />

            <ImageView
                android:id="@+id/iconUpload"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/upload_image"
                android:layout_marginEnd="8dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where was the antibiotic obtained?"
            android:textSize="14sp"
            android:textColor="#444444"/>

        <EditText
            android:id="@+id/editSource"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/chw_textbox"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />


        <LinearLayout
            android:id="@+id/layoutAntibioticType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of Antibiotic"
                android:textSize="14sp"
                android:textColor="#444444" />

            <EditText
                android:id="@+id/editAntibioticType"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/chw_textbox"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of antibiotic use"
            android:textSize="14sp"
            android:textColor="#444444"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/editAntibioticDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="__/__/____"
                android:focusable="false"
                android:background="@drawable/chw_textbox"
                android:padding="12dp" />

            <ImageView
                android:id="@+id/calendarIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_calendar"
                android:layout_marginEnd="8dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dosage"
            android:textSize="14sp"
            android:textColor="#444444"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/editDosage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/chw_textbox"
                android:inputType="numberDecimal"
                android:padding="12dp" />

            <Spinner
                android:id="@+id/spinnerUnit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/spinner_background"
                android:padding="12dp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration (Days)"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/editDuration"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/chw_textbox"
                    android:inputType="number"
                    android:padding="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course Completed?"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/spinnerCourseComplete"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:background="@drawable/chw_next_button"
            android:backgroundTint="#32C1A0"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
</ScrollView>
